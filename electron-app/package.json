{
  "name": "reimbursement-app",
  "version": "1.0.0",
  "description": "报销助手 - 桌面版",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": [
    "reimbursement",
    "expense",
    "invoice"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.expense.reimbursement",
    "productName": "报销助手",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**"
    ],
    "extraResources": [
      {
        "from": "../templates",
        "to": "backend/templates",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../static",
        "to": "backend/static",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../config.py",
        "to": "backend/config.py"
      },
      {
        "from": "../ocr_handler.py",
        "to": "backend/ocr_handler.py"
      },
      {
        "from": "../invoice_analyzer.py",
        "to": "backend/invoice_analyzer.py"
      },
      {
        "from": "../file_organizer.py",
        "to": "backend/file_organizer.py"
      },
      {
        "from": "../report_generator.py",
        "to": "backend/report_generator.py"
      },
      {
        "from": "../web_app.py",
        "to": "backend/web_app.py"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.finance"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Finance"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
